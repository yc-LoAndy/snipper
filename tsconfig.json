{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",
        // Treat files as modules even if it doesn't use import/export
        "moduleDetection": "force",
        // Use correct ESM import behavior
        "strict": true,
        "esModuleInterop": true,
        // "moduleResolution": "node16",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "lib": [
            "ES2021.String"
        ]
    },
    "include": [
        "src/**/*.ts",
        "*.js",
        "prisma/*.ts"
    ]
}
