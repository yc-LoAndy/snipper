{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        // Treat files as modules even if it doesn't use import/export
        "moduleDetection": "force",
        // Use correct ESM import behavior
        "strict": true,
        "esModuleInterop": true,
        // "moduleResolution": "node16",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "*.js",
        "prisma/*.ts"
    ]
}
